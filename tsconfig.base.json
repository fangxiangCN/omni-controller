{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@omni/shared-runtime": ["packages/shared-runtime/src"],
      "@omni/shared-runtime/*": ["packages/shared-runtime/src/*"],
      "@omni/shared-types": ["packages/shared-types/src"],
      "@omni/shared-types/*": ["packages/shared-types/src/*"],
      "@omni/core-runtime": ["packages/core-runtime/src"],
      "@omni/core-runtime/*": ["packages/core-runtime/src/*"],
      "@omni/core-types": ["packages/core-types/src"],
      "@omni/core-types/*": ["packages/core-types/src/*"],
      "@omni/visualizer": ["packages/visualizer/src"],
      "@omni/visualizer/*": ["packages/visualizer/src/*"],
      "@omni/playground-runtime": ["packages/playground-runtime/src"],
      "@omni/playground-runtime/*": ["packages/playground-runtime/src/*"],
      "@omni/playground-client": ["packages/playground-client/src"],
      "@omni/playground-client/*": ["packages/playground-client/src/*"],
      "@omni/web-runtime": ["packages/web-runtime/src"],
      "@omni/web-runtime/*": ["packages/web-runtime/src/*"],
      "@omni/ipc-contract": ["packages/ipc-contract/src"],
      "@omni/ipc-contract/*": ["packages/ipc-contract/src/*"],
      "@omni/ipc-client": ["packages/ipc-client/src"],
      "@omni/ipc-client/*": ["packages/ipc-client/src/*"],
      "@omni/ipc-main": ["packages/ipc-main/src"],
      "@omni/ipc-main/*": ["packages/ipc-main/src/*"],
      "@omni/drivers-android": ["packages/drivers/android/src"],
      "@omni/drivers-interface": ["packages/drivers/interface/src"],
      "@/*": ["packages/core-runtime/src/*"]
    },
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}

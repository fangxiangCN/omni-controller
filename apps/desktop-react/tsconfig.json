{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@omni/shared": ["../../packages/shared/src"],
      "@omni/shared/*": ["../../packages/shared/src/*"],
      "@omni/core": ["../../packages/core/src"],
      "@omni/core/*": ["../../packages/core/src/*"],
      "@omni/visualizer": ["../../packages/visualizer/src"],
      "@omni/visualizer/*": ["../../packages/visualizer/src/*"],
      "@omni/playground": ["../../packages/playground/src"],
      "@omni/playground/*": ["../../packages/playground/src/*"],
      "@omni/web": ["../../packages/web/src"],
      "@omni/web/*": ["../../packages/web/src/*"],
      "@/*": ["./src/*"]
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src", "electron"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
